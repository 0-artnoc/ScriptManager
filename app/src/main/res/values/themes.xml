<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Scriptapp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- color used for overflow and UP button -->
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlHighlight">#C0C0C0</item>
        <item name="android:textColorHint">#FFBABABA</item>
        <!-- this is for switchies (default color) -->
        <item name="android:colorForeground">#FFBABABA</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">#FF00C0C0</item>
        <item name="android:colorLongPressedHighlight">#005F5F</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/black</item>
        <item name="colorSecondaryVariant">@color/black</item>
        <!-- color used on '+' signs on buttons for example -->
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorAccent">@color/black</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
    </style>
    <style name="Theme.Scriptapp.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Scriptapp.AppBarOverlay" parent="ThemeOverlay.AppCompat.DayNight.ActionBar" />

    <style name="Theme.Scriptapp.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight"></style>

    <style name="Theme.Scriptapp." parent="Theme.AppCompat.DayNight.Dialog">
    </style>
    <style name="TimePickerTheme" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="colorAccent">?colorPrimaryVariant</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!-- change letter on the date picker : android:textColorPrimary -->
        <!-- change title of date picker : android:textColorPrimaryInverse, android:textColorSecondary -->
        <!-- useless:
                colorPrimary,colorPrimaryDark,android:textColor ,
                android:textColorAlertDialogListItem,colorSecondary
         -->
    </style>
    <style name="AppTheme.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorPrimary">#ff00ff</item>
        <item name="android:textColorSecondary">#00ffff</item>
    </style>
</resources>