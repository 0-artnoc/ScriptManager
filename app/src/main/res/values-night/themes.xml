<resources xmlns:tools="http://schemas.android.com/tools">

    <!--
          primary color     : black
          primary variant  : grey (#C0C0C0)
          secondary           : white
    -->
    <style name="AppTheme" parent="Theme.MaterialComponents.NoActionBar">
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlHighlight">#FF000000</item>
        <item name="android:colorLongPressedHighlight">#333333</item>
        <item name="android:colorForeground">#FFBABABA</item>
        <item name="colorPrimary">#FF000000</item>
        <item name="colorPrimaryVariant">#FF000000</item>
        <item name="android:textColorHint">#FFBABABA</item>
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/white</item>

        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="preferenceTheme">@style/AppTheme.Preference</item>
        <item name="alertDialogTheme">@style/AppTheme.AlertDialog</item>
        <item name="actionOverflowButtonStyle">@style/AppTheme.actionOverflowButtonStyle</item>
        <item name="colorSurface">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>

    </style>

    <style name="AppTheme.Preference" parent="@style/PreferenceThemeOverlay">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.AlertDialog" parent="Theme.AppCompat.Dialog.Alert">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:background">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
    </style>

    <style name="AppTheme.TimePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="android:textColorPrimary">#C0C0C0</item>
        <item name="colorAccent">#C0C0C0</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.DatePicker" parent="ThemeOverlay.MaterialComponents.MaterialCalendar">
        <item name="colorPrimary">@color/white</item>
        <item name="android:textColorSecondary">#C0C0C0</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorAccent">#C0C0C0</item>
        <item name="android:textColorPrimaryInverse">@color/black</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.RenameDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="colorAccent">#C0C0C0</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="android:windowBackground">@color/black</item>
    </style>

    <style name="AppTheme.actionOverflowButtonStyle" parent="android:Widget.Material.ActionButton.Overflow">
        <!-- Tweak of the button that trigger ow menu -->
    </style>

</resources>